{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	| Modification
{% endblock %}

{% block body %}
    <h1 class="text-center my-5">Modification de compte</h1>

    <div class="row">
        <div class="col-12 text-center">
		{{ form_start(form, {'attr': {'class': 'col-6 mx-auto mb-5'}}) }}
            <div class="mb-3">
                {{ form_label(form.firstname, 'Pr√©nom') }}
                {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.lastname, 'Nom') }}
                {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.email, 'Email') }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
	            <input type="submit" name="" class="btn btn-primary" value="Modifier">
	        </div>
        {{ form_end(form) }}
	    </div>
    </div>
{% endblock %}