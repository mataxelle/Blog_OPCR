{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	| Ajouter un article
{% endblock %}

{% block body %}
	<div>
		<h2 class="text-center text-secondary mb-5">Modification de l'article {{ post.title}}</h2>

		<h5 class="text-center text-secondary mb-5">
			<a href="/">Accueil</a>
		</h5>

        <div class="row">
			    <div class="col-4 mx-auto">
				    {% if post.image is not null %}
                    <img width="400" src="/upload/{{post.image}}" alt="{{ post.image }}">
                    {% endif %}
			    </div>
		    </div>

		<div class="text-center">
			{{ form_start(form, {'attr': {'class': 'col-lg-6 col-md-10 mx-auto mb-5'}}) }}
			<div class="mb-3">
				{{ form_label(form.title, 'Title') }}
				{{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="mb-3">
				{{ form_label(form.slug, 'Slug') }}
				{{ form_widget(form.slug, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="mb-3">
				{{ form_widget(form.image) }}
			</div>
			<div class="mb-3">
				{{ form_label(form.content, 'Contenu') }}
				{{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="mb-3">
                {{ form_widget(form.isPublished) }}
            <span>Publier l'article</span>
            </div>
			<div class="mb-3">
				<input type="submit" name="" class="btn btn-primary" value="Modifier">
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
