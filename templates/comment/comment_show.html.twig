<div>
	<div class="col">
		<h3>Commentaires</h3>
		{% if comments %}
		<div class="card border-0">
			{% for comment in comments %}
				<div class="col">
					<div class="card-body">
						<p class="card-text">{{ comment.content }}</p>
					</div>
				</div>
			{% endfor %}
		</div>
		{% else %}
		<p>Pas de commentaires</p>
		{% endif %}
	</div>
</div>
