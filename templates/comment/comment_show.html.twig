<div class="col-lg-8 col-md-10 mx-auto">
	<h3 class="mb-5">Commentaires</h3>

	{% if comments %}
		{% for comment in comments %}
			<div class="row mb-3">
				<div class="col-4">
					<p>{{ comment.userId }}</p>
				</div>
				<div class="col-8">
					<div>
						<p>{{ comment.content }}</p>
					</div>
				</div>
			</div>
		{% endfor %}
	{% else %}
		<p>Pas de commentaires</p>
	{% endif %}
</div>
