{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center mt-5 mb-5">liste des articles</h1>

    <div class="row">
        <div class="col">
            <h5>Article(s)
                <span>({{ posts|length }})</span>
            </h5>
            <table class="table table-striped">
                <tr>
                    <th>#</th>
                    <th>Titre</th>
                    <th>Date de publication</th>
                    <th>Date de modification</th>
                    <th>Actions</th>
                </tr>
                {% set i = 1 %}
                {% for post in posts %}
                    <tr class="hoverable">
                        <td>{{ i }}</td>
                        <td><a href="/post/{{ post.slug }}" target="_blank">{{ post.title }}</a></td>
                        <td>{{ post.created_at ? post.created_at|date('d/m/Y') : '-' }}</td>
                        <td>{{ post.updated_at|date('d/m/Y') }}</td>
                        <td>
                            <a class="btn btn-success" href="/update/{{ post.id}}"><i class="fas fa-edit"></i></a>
                            <a class="btn btn-danger" href="/delete/{{ post.slug }}"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% set i = i+1 %}
                {% endfor %}
            </table>
        </div>
    </div>
</div>
{% endblock %}