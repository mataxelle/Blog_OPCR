{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	| Contact
{% endblock %}

{% block body %}
	<div>

		<h1 class="text-center mt-5 mb-5">Contactez-moi !</h1>

		<div class="row">
			<div class="col-lg-6 col-md-10 mx-auto">
				<form action="/contact" method="post">
					<div class="mb-3">
						<label for="firstname">Pr√©nom</label>
						<input type="text" name="firstname" id="firstname" class="form-control" required>
					</div>
					<div class="mb-3">
						<label for="lastname" class="form-label">Nom</label>
						<input type="text" name="lastname" class="form-control" id="lastname" required>
					</div>
					<div class="mb-3">
						<label for="email" class="form-label">Email</label>
						<input type="email" name="email" class="form-control" id="email" required>
					</div>
					<div class="mb-3">
						<label for="label" class="form-label">Objet</label>
						<select name="label" class="form-select" aria-label="select">
							<option value="information">Information</option>
							<option value="question">Question</option>
						</select>
					</div>
					<div class="mb-3">
						<label for="message" class="form-label">Message</label>
						<textarea name="message" class="form-control" id="message" rows="3" required></textarea>
					</div>
					<div class="mb-3">
						<input type="submit" class="btn btn-primary"  value="Envoyer">
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
