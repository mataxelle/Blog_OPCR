<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous" />
	<script src="https://kit.fontawesome.com/4c2b4e375e.js" crossorigin="anonymous"></script>
    <title>
      {% block title %}
        Mon blog
      {% endblock %}
    </title>
    {% block stylesheets %}
    {% endblock %}
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Blog OPCR</a>
          {% if user %}
            <span class="navbar-text">
              Hello
              {{ user }}
            </span>
          {% endif %}
          <button class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto text-center">
              <li class="nav-item active">
                <a class="nav-link active" aria-current="page" href="/">
                  Accueil
                </a>
              </li>
			  {% if admin == 1 %}
                <li class="nav-item active">
                  <a class="nav-link" href="/admin">Administration</a>
                </li>
              {% endif %}
              {% if user %}
                <li class="nav-item active">
                  <a class="nav-link" href="/account">Mon compte</a>
                </li>
              {% endif %}
              {% if not user %}
                <li class="nav-item active">
                  <a class="nav-link" href="/register">Inscription</a>
                </li>
                <li class="nav-item active">
                  <a class="nav-link" href="/login">Connexion</a>
                </li>
              {% endif %}
              <li class="nav-item">
                <a class="nav-link" href="/contact">Contact</a>
              </li>
              {% if user %}
                <li class="nav-item active">
                  <a class="nav-link" href="/logout">DÃ©connexion</a>
                </li>
              {% endif %}
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <div class="container mb-5">
        {% block body %}
        {% endblock %}
      </div>
    </main>

    <footer class="foote text-center mt-auto pt-3 bg-light">
      <div class="container pt-4">
        <section class="mb-4">
          <!-- Facebook -->
          <a class="btn btn-link btn-lg text-dark m-1"
            href="#!"
            role="button">
            <i class="fab fa-facebook-f"></i>
          </a>

          <!-- Twitter -->
          <a class="btn btn-link btn-lg text-dark m-1"
            href="#!"
            role="button">
            <i class="fab fa-twitter"></i>
          </a>

          <!-- Google -->
          <a class="btn btn-link btn-lg text-dark m-1"
            href="#!"
            role="button">
            <i class="fab fa-google"></i>
          </a>

          <!-- Instagram -->
          <a class="btn btn-link btn-lg text-dark m-1"
            href="#!"
            role="button">
            <i class="fab fa-instagram"></i>
          </a>

          <!-- Linkedin -->
          <a class="btn btn-link btn-lg text-dark m-1"
            href="#!"
            role="button">
            <i class="fab fa-linkedin"></i>
          </a>
          <!-- Github -->
          <a class="btn btn-link btn-lg text-dark m-1"
            href="#!"
            role="button">
            <i class="fab fa-github"></i>
          </a>
        </section>
      </div>
      <div class="text-bg-secondary p-3">
        <p class="text-center">
          &copy; Copyright
          {{ 'now'|date('Y') }}
          &middot;
          <a href="" class="text-decoration-none text-white">A propos</a>
		  &middot;
		  <a class="text-decoration-none text-white" href="/assets/images/image_cv_model.pdf" target="_blank" rel="noreferrer noopener">CV</a>
        </p>
      </div>
    </footer>

    {% block javascripts %}
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8"
        crossorigin="anonymous"></script>
    {% endblock %}
  </body>
</html>
